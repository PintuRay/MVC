@{
    Layout = "_Layout";
    ViewData["Title"] = "AlternateUnit";
}
@section additionalStyles {
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i>
                        Alternate Unit Setup For MouldMicinery & RawMatiriales
                    </h3>
                </div>
                <div class="card-body">
                    <div class="card card-primary card-outline">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="pt-2">Product  Type</label>
                                        <select class="form-control select2bs4" style="width: 100%" name="ddlProductType" tabindex="1">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="pt-2">Product  Name</label>
                                        <select class="form-control select2bs4" style="width: 100%;" name="ProductId" tabindex="2">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label class="pt-2">Alternate Unit</label>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="" value="1" disabled name="AlternateQty">
                                            <div class="input-group-prepend">
                                                <input type="text" class="form-control" id="" name="AlternateUnit" placeholder="Alternate Unit" tabindex="3">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <input type="hidden" class="form-control" id="HdnUnitId">
                                    <label class="pt-2">Unit</label>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="UnitQty" tabindex="4">
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="Unit">N/A</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group" style="padding-top:37px">
                                        <label></label>
                                        <button type="button" tabindex="5" class="btn btn-block btn-outline-primary btn-alternateunit-create" style="float:right"><b>Submit</b></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i>
                        Alternate Unit Set Up For Finished Good
                    </h3>
                </div>
                <div class="card-body">
                    <div class="card card-primary card-outline">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="pt-2">Product  Type</label>
                                        <select class="form-control select2bs4" style="width: 100%" name="fddlProductType" tabindex="1">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="pt-2">Product  Name</label>
                                        <select class="form-control select2bs4" style="width: 100%;" name="fProductId" tabindex="2">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label class="pt-2">Alternate Unit</label>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id=""  name="fAlternateQty">
                                            <div class="input-group-prepend">
                                                <input type="text" class="form-control" id="" name="fAlternateUnit" placeholder="Alternate Unit" tabindex="3">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <input type="hidden" class="form-control" id="fHdnUnitId">
                                    <label class="pt-2">Unit</label>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control" value="1" disabled name="fUnitQty" tabindex="4">
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="fUnit">N/A</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label class="pt-2">Retail Price</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="" name="fRetailPrice">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label class="pt-2">Wh.sale Price</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="" name="fWholesalePrice">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group" style="padding-top:37px">
                                        <label></label>
                                        <button type="button" id="fSubmit" tabindex="5" class="btn btn-block btn-outline-primary btn-falternateunit-create" style="float:right"><b>Submit</b></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-primary card-outline">
                <div class="card-body">
                    <div class="row">
                        <div id="loader" style="display:none;"></div>
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-link cust-btn" id="btnRefresh" style="float:right;border: 0px;color: #fff; background-color:#337AB7; border-color: #3C8DBC; border-radius: 4px;"> <i class="fa-solid fa-arrows-rotate"></i>Refresh</button>
                            <div class="tbAlternateUnit">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section additionalScripts {
    <!--Fontawsome Kit-->
    <script src="https://kit.fontawesome.com/70d8db024d.js" crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!--date Format-->
    <script src="~/plugins/moment/moment.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- Select2 -->
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script>
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        });
    </script>
    <!--Page Script-->
    <script src="~/viewscripts/admin/alternateunit.js"></script>
}