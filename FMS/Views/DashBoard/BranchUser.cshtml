@model SessionModel
@{
    ViewData["Title"] = "";
    Layout = "_AuthLayout";
}
@section additionalStyles {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
}

<div class="card">
    <div class="card-body login-card-body">
        <form action="/DashBoard/BranchUser" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12">
                    <div class="form-group mb-3">
                        <select class="form-control select2bs4" style="width: 100%;" id="BranchId" name="BranchId">
                            <option selected="selected">-- Select Branch --</option>
                            @if (Model.Branches != null)
                            {
                                @foreach (var item in Model.Branches)
                                {
                                    <option value="@item.BranchId">@item.BranchName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control select2bs4" style="width: 100%;" name="FinancialYearId">
                        </select>
                    </div>

                </div>
                <div class="col-8"></div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Finish</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section additionalScripts {
    <script src="https://kit.fontawesome.com/70d8db024d.js" crossorigin="anonymous"></script>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <!--Page Script-->
    <script src="~/viewscripts/dashboard/branchuser.js"></script>
    <script>
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        })
    </script>
    @if (TempData["SuccessMsg"] != null)
    {
        <script>
            toastr.success('@TempData["SuccessMsg"]');
        </script>
    }
}

