@model ChangePasswordModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "_AuthLayout";
}
@section additionalStyles {
    <script src="https://kit.fontawesome.com/70d8db024d.js" crossorigin="anonymous"></script>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
}
<div class="card card-outline card-primary">
    <div class="card-header text-center">
        <a href="#" class="brand-link">
            @*<img src="~/dist/img/logo.jpg" alt="Logo" class="brand-image" style="opacity: .8; max-height:95px; float:none">*@
        </a>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "ChangePassword" }))
        {

            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Old Password" asp-for="CurrentPassword">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>

            </div>
            <div class="pb-2">
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="New Password" asp-for="NewPassword">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="pb-2">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmNewPassword">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>

            </div>
            <div class="pb-2">
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Change password</button>
                </div>
                <!-- /.col -->
            </div>
        }

        <p class="mt-3 mb-1">
            <a href="@Url.Action("DashBoard","DashBoard")">DashBoard</a>
        </p>
    </div>
</div>
@section additionalScripts {
    <script src="https://kit.fontawesome.com/70d8db024d.js" crossorigin="anonymous"></script>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    @if (TempData["Message"] != null)
    {
        <script>
            toastr.error('@TempData["Message"]');
        </script>
    }
}

