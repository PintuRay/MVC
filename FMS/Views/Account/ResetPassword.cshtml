@model ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}
@section additionalStyles {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
}
<div class="card card-outline card-primary">
    <div class="card-header text-center">
        @*   <a href="../../index2.html" class="h1"><b>Admin</b>LTE</a>*@
    </div>
    <div class="card-body">
        <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>

        <form action="/Account/ResetPassword" method="post" enctype="multipart/form-data">
            <input type="hidden" name="UserId" asp-for="UserId" />
            <input type="hidden" name="Token" asp-for="Token" />
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="New Password" asp-for="NewPassword">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmNewPassword">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Change password</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <p class="mt-3 mb-1">
            <a href="@Url.Action("Login","Account")"><i class="fas fa-light fa-circle-arrow-left"></i><b>Login</b></a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>
@section additionalScripts {
    <script src="https://kit.fontawesome.com/70d8db024d.js" crossorigin="anonymous"></script>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/plugins/inputmask/jquery.inputmask.min.js"></script>
    <script>
        $('[data-mask]').inputmask()
    </script>
    @if (TempData["ErrorMsg"] != null)
    {
        <script>
            toastr.error('@TempData["ErrorMsg"]');
        </script>
    }

}



